{
    "rules": {
        ".read": false,
        "clubs": {
            ".read": true,
            ".write": "root.child('users').child(auth.uid).child('role').val() == 99"
        },
        "counters": {
            ".read": "root.child('users').child(auth.uid).child('role').val() > 20",
            ".write": "root.child('users').child(auth.uid).child('role').val() > 20"
        },
        "images": {
            ".read": true,
            ".write": "root.child('users').child(auth.uid).child('role').val() == 99"
        },
        "players": {
            ".read": true,
            ".write": "root.child('users').child(auth.uid).child('role').val() > 20",
            ".indexOn": ["club", "firstNameUA", "lastNameUA", "registrDate"],
            "$player": {
                ".read": true,
                ".write": "root.child('users').child(auth.uid).child('role').val() > 20",
                ".validate": "newData.hasChildren(['born', 'club', 'endActivationDate', 'firstNameUA', 'gender', 'lastNameUA', 'license', 'registrDate'])",
                "born": {
                    ".validate": "newData.isNumber()"
                },
                "citizenship": {
                    ".validate": "newData.isString() && newData.val().length == 2"
                },
                "club": {
                    ".validate": "root.child('clubs/' + newData.val()).exists()"
                },
                "endActivationDate": {
                    ".validate": "newData.isNumber()"
                },
                "firstNameUA": {
                    ".validate": "newData.isString()"
                },
                "gender": {
                    ".validate": "newData.isString() && (newData.val().contains('MALE') || newData.val().contains('FEMALE'))"
                },
                "lastNameUA": {
                    ".validate": "newData.isString()"
                },
                "license": {
                    ".validate": "newData.isString() || newData.isNumber()"
                },
                "registrDate": {
                    ".validate": "newData.isNumber()"
                }
            }
        },
        "requests": {
            ".read": true,
            ".write": "root.child('users').child(auth.uid).child('role').val() > 20",
            "$request": {
                "playersList": {
                    ".read": true,
                    ".write": "root.child('users').child(auth.uid).child('role').val() > 20",
                    "$player": {
                        "playerId": {
                            ".read": true,
                            ".write": "root.child('users').child(auth.uid).child('role').val() > 20"
                        },
                        "docsChecked": {
                            ".read": true,
                            ".write": "root.child('users').child(auth.uid).child('role').val() > 51"
                        },
                        "paidChecked": {
                            ".read": true,
                            ".write": "root.child('users').child(auth.uid).child('role').val() > 51"
                        }
                    }
                },
                "manager": {
                    ".read": true,
                    ".write": "root.child('users').child(auth.uid).child('role').val() > 20"
                },
                "continue": {
                    ".read": true,
                    ".write": "root.child('users').child(auth.uid).child('role').val() > 20"
                },
                "resolved": {
                    ".read": true,
                    ".write": "root.child('users').child(auth.uid).child('role').val() > 51"
                }
            }
        },
        "transfers": {
            ".read": true,
            ".write": "root.child('users').child(auth.uid).child('role').val() == 99"
        },
        "roles": {
            ".read": true,
            ".write": "root.child('users').child(auth.uid).child('role').val() == 99"
        },
        "users": {
            "$user_id": {
                ".read": true,
                ".write": true,
                "role": {
                    ".read": true,
                    ".write": "root.child('users').child(auth.uid).child('role').val() == 99"
                }
            },
            ".read": true,
            ".write": true
        },
        "seasons": {
            "$season_id": {
                ".read": true,
                ".write": "root.child('users').child(auth.uid).child('role').val() > 90",
                ".validate": "newData.hasChildren(['start_date', 'end_date', 'title'])",
                "start_date": {
                    ".validate": "newData.isString()"
                },
                "end_date": {
                    ".validate": "newData.isString()"
                },
                "title": {
                    ".validate": "newData.isString()"
                },
                "active": {
                    ".validate": "newData.isBoolean()"
                }
            },
            ".read": true
        }
    }
}

